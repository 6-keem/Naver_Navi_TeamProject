<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/route_list_parent_container">

    <ImageView
        android:id="@+id/transport_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/transport_number"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/walk" />

    <TextView
        android:id="@+id/transport_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="버스 번호"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/transport_icon"
        app:layout_constraintEnd_toStartOf="@+id/wating_time" />

    <TextView
        android:id="@+id/wating_time"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:text="대기시간"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/transport_number"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>