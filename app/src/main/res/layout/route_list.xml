<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/departure_text_input_layout"
        android:contentDescription="출발지를 입력하기 위한 TextInputLayout이다."
        android:layout_width="0dp" android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/change_image_button" app:layout_constraintEnd_toStartOf="@+id/back_activity_image_button">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="출발지를 입력하세요"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/destination_text_input_layout"
        android:contentDescription="도착지를 입력하기 위한 TextInputLayout이다."
        android:layout_width="0dp" android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/departure_text_input_layout"
        app:layout_constraintStart_toStartOf="@+id/departure_text_input_layout" app:layout_constraintEnd_toStartOf="@+id/search_image_button">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="도착지를 입력하세요"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/change_image_button"
        android:contentDescription="출발지 목적지 텍스트 위치 변경 버튼"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="@color/transparent" app:tint="@color/black"
        app:srcCompat="@drawable/change_departure_destination"

        android:layout_marginStart="5dp" android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/departure_text_input_layout" app:layout_constraintBottom_toBottomOf="@+id/destination_text_input_layout"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/departure_text_input_layout" />

    <ImageButton
        android:id="@+id/search_image_button"
        android:contentDescription="경로 리스트를 받을 수 있도록 하는 버튼이다."
        android:layout_width="50dp" android:layout_height="50dp"
        android:background="@color/transparent" app:tint="@color/black"
        app:srcCompat="?android:attr/actionModeWebSearchDrawable"

        android:layout_marginStart="5dp" android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@+id/departure_text_input_layout" app:layout_constraintBottom_toBottomOf="@+id/destination_text_input_layout"
        app:layout_constraintStart_toEndOf="@+id/destination_text_input_layout" app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/back_activity_image_button"
        android:contentDescription="홈 화면으로 이동하기 위한 뒤로가기 버튼이다."
        android:layout_width="50dp" android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:background="@color/transparent" app:tint="@color/black"

        android:layout_marginStart="5dp" android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/departure_text_input_layout" app:layout_constraintBottom_toBottomOf="@+id/departure_text_input_layout"
        app:layout_constraintStart_toEndOf="@+id/departure_text_input_layout" app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/departure_time_text_view"
        android:contentDescription="대중교통 출발 시간을 나타내는 TextView이다."
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="출발시간 00:00" android:textSize="11sp"

        android:layout_marginStart="10dp" android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/destination_text_input_layout" app:layout_constraintBottom_toTopOf="@+id/route_list_recycler_View"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/route_sorting_text_view"
        android:contentDescription="경로 정렬 기능을 지정하는 TextView(레이아웃 수정 예정)이다."
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="00 경로 순" android:textSize="11sp"

        android:layout_marginTop="5dp" android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/destination_text_input_layout" app:layout_constraintBottom_toTopOf="@+id/route_list_recycler_View"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/route_list_recycler_View"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bright_gray"
        android:contentDescription="이동 가능한 경로 리스트가 나오는 공간이다."

        app:layout_constraintTop_toBottomOf="@+id/route_sorting_text_view" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>