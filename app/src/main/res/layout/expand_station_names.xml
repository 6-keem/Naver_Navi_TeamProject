<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expand_station_names_wrapper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/expand_pedestrian_image"
        app:layout_constraintLeft_toLeftOf="@+id/expand_station_names_wrapper"
        app:layout_constraintTop_toTopOf="@+id/expand_station_names_wrapper"
        app:layout_constraintBottom_toBottomOf="@+id/expand_station_names_wrapper"
        app:layout_constraintRight_toLeftOf="@+id/expand_station_names"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:src="@drawable/right_arrow"/>

    <TextView
        android:id="@+id/expand_station_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200m 앞 우회전"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/expand_pedestrian_image"
        app:layout_constraintTop_toTopOf="@+id/expand_station_names_wrapper"
        app:layout_constraintBottom_toBottomOf="@+id/expand_station_names_wrapper"/>

</androidx.constraintlayout.widget.ConstraintLayout>