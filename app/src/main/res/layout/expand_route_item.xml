<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/expand_icon"
        android:contentDescription="대중교통 아이콘"
        android:layout_width="25dp" android:layout_height="25dp"
        tools:srcCompat="@tools:sample/avatars"

        android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/expand_name"
        android:contentDescription="대중교통 번호"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="대중교통 종류" android:textSize="15sp"

        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/expand_remaining_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:contentDescription="대중교통 소요 시간"
        android:gravity="end"

        android:text="세부 요구 시간"
        android:textSize="11sp" />

</LinearLayout>